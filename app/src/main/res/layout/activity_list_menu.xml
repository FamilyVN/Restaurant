<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.tuananh.restaurant.manager.view.activity.settings.listmenu.ListMenuActivityViewModel"/>

        <variable
            name="listener"
            type="com.tuananh.restaurant.manager.view.activity.settings.listmenu.ListMenuActivity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBlue"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> listener.onBackPressed()}"
                android:paddingBottom="@dimen/margin_padding_10"
                android:paddingLeft="@dimen/margin_padding_15"
                android:paddingRight="@dimen/margin_padding_15"
                android:paddingTop="@dimen/margin_padding_10"
                android:src="@drawable/ic_back_white"/>
        </LinearLayout>
    </LinearLayout>
</layout>
