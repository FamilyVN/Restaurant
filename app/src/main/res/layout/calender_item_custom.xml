<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listener"
            type="com.tuananh.restaurant.manager.view.activity.payment.PaymentActivity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_1)}"
                    android:text="@string/text_button_pay_number_1"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_2)}"
                    android:text="@string/text_button_pay_number_2"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_3)}"
                    android:text="@string/text_button_pay_number_3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_4)}"
                    android:text="@string/text_button_pay_number_4"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_5)}"
                    android:text="@string/text_button_pay_number_5"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_6)}"
                    android:text="@string/text_button_pay_number_6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_7)}"
                    android:text="@string/text_button_pay_number_7"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_8)}"
                    android:text="@string/text_button_pay_number_8"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_9)}"
                    android:text="@string/text_button_pay_number_9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_0)}"
                    android:text="@string/text_button_pay_number_0"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_00)}"
                    android:text="@string/text_button_pay_number_00"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_number_000)}"
                    android:text="@string/text_button_pay_number_000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageButton
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_back)}"
                    android:src="@drawable/ic_keyboard_backspace"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_clear_all)}"
                    android:text="@string/text_button_pay_clear_all"
                    android:textSize="@dimen/text_size_16"/>

                <Button
                    style="@style/button_pay_custom"
                    android:background="@drawable/calender_background_default"
                    android:onClick="@{() -> listener.onPay(@string/text_button_pay_exactly)}"
                    android:text="@string/text_button_pay_exactly"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            style="@style/button_pay_custom"
            android:background="@android:color/holo_red_light"
            android:onClick="@{() -> listener.onPay(@string/text_button_pay)}"
            android:text="@string/text_button_pay"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
</layout>