<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_menu_sell"
            style="@style/relative_layout_item_menu">

            <ImageView
                android:layout_width="@dimen/size_image_item_menu"
                android:layout_height="@dimen/size_image_item_menu"
                android:background="@android:color/holo_green_dark"/>

            <ImageView
                style="@style/image_item_menu"
                android:src="@drawable/img_sell"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_menu_quick_payment"
            style="@style/relative_layout_item_menu">

            <ImageView
                android:layout_width="@dimen/size_image_item_menu"
                android:layout_height="@dimen/size_image_item_menu"
                android:background="@android:color/holo_blue_dark"/>

            <ImageView
                style="@style/image_item_menu"
                android:src="@drawable/img_quick_payment"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_menu_settings"
            style="@style/relative_layout_item_menu">

            <ImageView
                android:layout_width="@dimen/size_image_item_menu"
                android:layout_height="@dimen/size_image_item_menu"
                android:background="@android:color/holo_red_dark"/>

            <ImageView
                style="@style/image_item_menu"
                android:src="@drawable/img_settings"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_menu_help"
            style="@style/relative_layout_item_menu">

            <ImageView
                android:layout_width="@dimen/size_image_item_menu"
                android:layout_height="@dimen/size_image_item_menu"
                android:background="@android:color/holo_orange_dark"/>

            <ImageView
                style="@style/image_item_menu"
                android:src="@drawable/img_help"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
