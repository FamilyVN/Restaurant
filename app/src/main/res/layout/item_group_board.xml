<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.tuananh.restaurant.manager.model.board.Board"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/card_view_item_group_board_width"
        android:layout_height="@dimen/item_group_board_height"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_number_group_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@{String.format(@string/board_number, viewModel.id)}"/>
    </android.support.v7.widget.CardView>
</layout>