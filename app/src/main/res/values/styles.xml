<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="image_item_menu">
        <item name="android:layout_width">@dimen/size_image_item_menu</item>
        <item name="android:layout_height">@dimen/size_image_item_menu</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="text_item_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/text_main_margin_top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_save_pay_board_activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_20</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_20</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_5</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_10</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_item_board_activity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/board_activity_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_board_activity</item>
    </style>

    <style name="text_item_board_activity_right" parent="text_item_board_activity">
        <item name="android:layout_weight">2</item>
        <item name="android:lines">1</item>
    </style>

    <style name="layout_item_board_activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">4</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="button_pay_custom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>
</resources>
